<div class="container mt-5">
  <h1>Mes Projets</h1>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <%= image_tag project.image.variant(resize_to_limit: [400, 300]), class: "card-img-top", alt: project.title %>
          <div class="card-body">
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text"><%= truncate(project.description, length: 100) %></p>
            <%= link_to "En savoir plus", project_path(project), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
