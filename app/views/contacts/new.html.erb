<div class="container mt-5">
  <h1>Contactez-moi</h1>
  <%= simple_form_for @contact do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "Nom" %>
    </div>
    <div class="form-group">
      <%= f.input :email, label: "Email" %>
    </div>
    <div class="form-group">
      <%= f.input :message, label: "Message", as: :text %>
    </div>
    <%= f.submit "Envoyer", class: "btn btn-primary" %>
  <% end %>
</div>
