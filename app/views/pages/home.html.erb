      <span class="tech-name">JavaScript</span>
    </div>
    <div class="col-6 col-md-4 col-lg-2 mb-4 tech-icon-container">
      <%= image_tag('stimulus-logo.jpg', alt: 'Stimulus', class: 'tech-icon') %>
      <span class="tech-name">Stimulus</span>
    </div>
    <div class="col-6 col-md-4 col-lg-2 mb-4 tech-icon-container">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/vuejs/vuejs-original.svg" alt="Vue.js" class="tech-icon">
